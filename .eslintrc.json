{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "extends": "standard",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "space-before-function-paren": 0,
    "curly": ["error", "multi-line"],
    "object-curly-spacing": 0,
    "no-return-await": 0,
    "quote-props": ["error", "as-needed"]
  }
}
